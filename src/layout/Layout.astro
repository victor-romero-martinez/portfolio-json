---
import { basics } from "@cv";

interface Props {
  title: string;
}

const { title } = Astro.props;
const { summary } = basics;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={summary} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://portfolio-json-ten.vercel.app/" />
    <meta
      property="og:image"
      content="https://portfolio-json-ten.vercel.app/opengraph-image.webp"
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --bg-color: #232946;
    --bg-secondary: hwb(230 14% 56%);
    --paragraph: #b8c1ec;
    --primary: #fffffe;
    --secondary: #ececec;
  }

  /* css reset */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    letter-spacing: -0.025rem;
  }

  body,
  figure,
  ul {
    margin: 0;
    padding: 0;
  }

  ul,
  li {
    list-style: none;
  }

  h1,
  h2 {
    color: var(--primary);
    margin: 0;
    text-wrap: balance;
  }

  h3,
  h4 {
    margin: 0;
    text-wrap: balance;
  }

  h3 {
    color: var(--secondary);
    font-weight: 500;
  }

  h4 {
    font-size: 0.8rem;
    font-weight: 400;
    letter-spacing: 0.06rem;
    margin-bottom: 4px;
  }

  p {
    font-family: monospace;
    text-wrap: pretty;
    line-height: 1.5;
    font-size: large;
    margin: 0;
  }

  a {
    color: currentColor;
    text-decoration: none;
  }

  /* my styles */
  body {
    max-width: 700px;
    background-color: var(--bg-color);
    color: var(--paragraph);
    margin-inline: auto;
  }

  .print {
    display: none !important;
  }

  span:has(svg) {
    min-width: fit-content;
    display: inline-flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: 6px;
  }

  /* @medias */
  @media (hover: hover) {
    a:hover {
      color: var(--primary);
      text-decoration: underline;
    }
  }

  @media print {
    body {
      --bg-secondary: #e2e2d6;
      --paragraph: #70706a;
      --primary: #242422;
      --secondary: #70706a;
    }

    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
      font-size: small;
    }

    astro-dev-toolbar {
      display: none !important;
    }
  }
</style>
